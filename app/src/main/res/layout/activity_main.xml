<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.creepersan.mediabanner.activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.creepersan.mediabanner.view.MediaBanner
            android:id="@+id/mainMediaBanner"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <SeekBar
            android:padding="16dp"
            android:id="@+id/mainSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/mainFirst"
                android:text="最前"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mainPrev"
                android:text="上一个"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mainNext"
                android:text="下一个"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mainLast"
                android:text="最后"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/mainLoopNo"
                android:text="不循环"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mainLoopLoop"
                android:text="循环"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mainLoopRandom"
                android:text="随机循环"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="积极播放"
                android:layout_weight="1"
                android:id="@+id/mainAutoPlayPositive"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:text="消极播放"
                android:layout_weight="1"
                android:id="@+id/mainAutoPlayNegative"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:text="停止播放"
                android:layout_weight="1"
                android:id="@+id/mainAutoPlayNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mainAutoPlayDelayText"
                android:layout_gravity="center"
                android:text="自动播放延时 : 3000"
                android:layout_width="160dp"
                android:layout_height="wrap_content" />
            <SeekBar
                android:max="5000"
                android:id="@+id/mainAutoPlayDelaySeekBar"
                android:layout_gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
